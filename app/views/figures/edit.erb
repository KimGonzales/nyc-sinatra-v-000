<h2> Edit Figure <%=@figure.name%></h2>

<form method="POST" action="/figures/<%=@figure.id%>">
<input type="hidden" name="_method" value="patch">
<label for="figure_name"> Figure Name </label><input type="text" id="figure_name" value="<%=@figure.name%>" name="figure[name]">

<h5>Edit Landmarks</h5>
<%@landmarks.each do |landmark| %>
    
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>"
    <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name %></input>
    <%end%>
    <h5>or Add a New Landmark </h5>
    <label>Landmark Name </label>
    <input type="text" name="landmark[name]" id="new_landmark"><br/>

    <h5>Edit Titles</h5>
    <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.name%>" 
    <%='checked' if @figure.titles.include?(title)%> >    <%=title.name%> </input>
    <%end%>
    <h5>or Create New Title</h5>
    <input type="text" name="title[title]" id="new_title"><br/><br/>

    <input type='submit' id="submit" value="Edit Figure">

</form>